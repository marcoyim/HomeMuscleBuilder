{
  "name": "home-muscle-builder",
  "version": "1.0.0",
  "description": "A Progressive Web App for home-based muscle building workouts",
  "main": "index.js",
  "scripts": {
    "start": "live-server --host=localhost --port=3000 --entry-file=index.html",
    "dev": "concurrently \"npm run start\" \"npm run func:start\"",
    "func:start": "cd api && func start",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "echo 'Frontend build complete'",
    "build:api": "cd api && npm install",
    "test": "echo 'Tests will be implemented'"
  },
  "keywords": [
    "PWA",
    "fitness",
    "workout",
    "muscle-building",
    "azure",
    "offline-first"
  ],
  "author": "HomeMuscleBuilder Team",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "concurrently": "^7.6.0"
  },
  "dependencies": {}
}
